<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.zzh.videoeditor.activity.HomeActivity">

    <ImageView
        android:id="@+id/home_iv_editor"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_normal_size"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/img_editor_selector"
        android:contentDescription="@string/home_iv_recorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_iv_recorder"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_normal_size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/img_recorder_selector"
        android:contentDescription="@string/home_iv_recorder"
        app:layout_constraintEnd_toStartOf="@+id/home_iv_player"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_iv_editor" />

    <ImageView
        android:id="@+id/home_iv_player"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_normal_size"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/img_player_selector"
        android:contentDescription="@string/home_iv_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_iv_recorder"
        app:layout_constraintTop_toBottomOf="@+id/home_iv_editor" />
</android.support.constraint.ConstraintLayout>
